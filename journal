#include <iostream>

const int max_size = 100;

struct Student {
	char surname[max_size];
	char name[max_size];
	int ocenka;
};

int Sravnivaem_stroki(char* str1, char* str2) {
	int i = 0;
	while (str1[i] > 0 && str2[i] > 0) {
		if (str1[i] < str2[i]) {
			return 2;
		}
		else if (str1[i] > str2[i]) {
			return 1;
		}
		i++;
	}
	if (str1[i] > 0 && str2[i] > 0) {
		return 0;
	}
	if (str1[i] == 0) {
		return 2;
	}
	else {
		return 1;
	}
}

int main() {
	int n;
	std::cout << "Введите количество учеников: ";
	std::cin >> n;
	Student* arr = new Student[n];
	for (int i = 0; i < n; i++) {
		std::cout << "Введите фамилию, имя и оценку ученика " << i + 1 << std::endl;
		std::cin >> arr[i].surname >> arr[i].name >> arr[i].ocenka;
	}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < n; j++) {
			Student temp = arr[i];
			if (arr[i].ocenka > arr[j].ocenka) {
				arr[i] = arr[j];
				arr[j] = temp;
			}
			if (arr[i].ocenka == arr[j].ocenka) {
				int sur = Sravnivaem_stroki(arr[i].surname, arr[j].surname);
				int nam = Sravnivaem_stroki(arr[i].name, arr[j].name);
				if (sur != 0) {
					if (sur == 2) {
						arr[i] = arr[j];
						arr[j] = temp;
					}
				}
				else {
					if (nam == 2) {
						arr[i] = arr[j];
						arr[j] = temp;
					}
				}
			}
		}

	}
	for (int i = 0; i < n; i++) {
		std::cout << arr[i].surname << ' ' << arr[i].name << ' ' << arr[i].ocenka << std::endl;
	}
	delete[] arr;
}
